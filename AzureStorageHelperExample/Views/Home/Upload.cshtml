@{
    ViewBag.Title = "Home Page";
}

</br>

    
    Upload URI: <a href="@ViewBag.blobUri">@ViewBag.blobUri</a>

@using (Html.BeginForm("Download", "home", FormMethod.Post))
{

    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Download</h4>

        <div class="form-group">
            <label class="control-label col-md-2" for="imageFile">Download file url</label>
            <div class="col-md-10">
                <input type="text" name="theFilePath" value=@ViewBag.blobUri class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Download" class="btn btn-default" />
            </div>

        </div>
    </div>

}


        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
